@model ExpressVoituresApp.Models.VehiculeReparationViewModel

@{
    ViewData["Title"] = "Nouvelle Réparation";
}

<h1>Nouvelle Réparation</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Reparation.Description" class="form-label"></label>
        <input asp-for="Reparation.Description" class="form-control" />
        <span asp-validation-for="Reparation.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reparation.Cout" class="form-label"></label>
        <input asp-for="Reparation.Cout" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Reparation.Cout" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Vehicule.Id" class="form-label">Véhicule</label>
        <select asp-for="Vehicule.Id" asp-items="ViewBag.Vehicules" class="form-select">
            <option value="">-- Sélectionnez un véhicule --</option>
        </select>
        <span asp-validation-for="Vehicule.Id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
