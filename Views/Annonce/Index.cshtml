@model IEnumerable<ExpressVoituresApp.Models.Entities.Annonce>

@{
    ViewData["Title"] = "Annonces";
}

<h1 class="mb-4 text-center fst-italic">Nos voitures</h1>

@if (!Model.Any())
{
    <div class="alert text-center">
        Aucune annonce disponible pour le moment.
    </div>
}
else
{
    <div class="row row-cols-1 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0 h-100">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <img src="@item.Photo" class="img-fluid rounded-start h-100 w-100 object-fit-cover" alt="@item.Titre">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light h-100">
                                    <span class="text-muted">Aucune image</span>
                                </div>
                            }
                        </div>

                        <div class="col-md-8 d-flex flex-column">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark flex-grow-1">
                                <div class="card-body px-3 py-1">
                                    <h4 class="text-end mb-0">@item.Prix €</h4>
                                    <h5 class="card-title">@item.Titre</h5>
                                    <p class="card-text text-truncate mb-1">@item.Description</p>
                                    <p class="mb-1">@item.Vehicule?.Annee</p>
                                    <p class="mb-1">@item.Vehicule?.Marque</p>
                                    <p class="mb-1">@item.Vehicule?.Modele</p>
                                    <p class="mb-1">@item.Vehicule?.Finition</p>
                                </div>
                            </a>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark me-1">Modifier</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Supprimer</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
