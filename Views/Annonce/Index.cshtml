@model IEnumerable<ExpressVoituresApp.Models.Entities.Annonce>

@{
    ViewData["Title"] = "Annonces";
}

<h1 class="mb-3 text-center fst-italic">Nos voitures</h1>

@if (!Model.Any())
{
    <div class="alert text-center">
        Aucune annonce disponible pour le moment.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0 h-100">
                        <a asp-action="Details" asp-route-id="@item.Id" class="col-md-5">
                            @if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <img src="@item.Photo" class="img-fluid rounded-start h-100 w-100 object-fit-cover" alt="@item.Titre">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light h-100">
                                    <span class="text-muted">Aucune image</span>
                                </div>
                            }
                        </a>

                        <div class="col-md-7 d-flex flex-column">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark flex-grow-1">
                                <div class="card-body ps-3 pe-2 py-2">
                                    <p class="mb-0"><strong>Prix : </strong> @item.Prix €</p>
                                    <p class="mb-1"><strong>Année : </strong> @item.Vehicule?.Annee</p>
                                    <p class="mb-1"><strong>Marque : </strong> @item.Vehicule?.Marque</p>
                                    <p class="mb-1"> <strong>Modèle : </strong>  @item.Vehicule?.Modele  @item.Vehicule?.Finition</p>
                                    <p class="mb-1 text-muted fst-italic">publiée le : @item.DatePublication.ToString("dd/MM/yyyy")</p>
                                </div>
                            </a>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="card-footer bg-transparent border-0 text-end p-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark me-1">Modifier</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Supprimer</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
