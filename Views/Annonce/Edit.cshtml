@model ExpressVoituresApp.Models.AnnonceViewModel

@{
    ViewData["Title"] = "Modifier une annonce";
}

<h1>Modifier l’annonce</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="VehiculeId" />

    <div class="form-group">
        <label asp-for="Titre"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" class="form-control" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Model.Photo" alt="@Model.Titre" style="max-width:100px;" class="my-2" />
        }
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Statut"></label>
        <select asp-for="Statut" class="form-control">
            <option value="DISPONIBLE">Disponible</option>
            <option value="VENDU">Vendu</option>
        </select>
        <span asp-validation-for="Statut" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
