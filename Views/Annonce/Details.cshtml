@model ExpressVoituresApp.Models.Entities.Annonce

@{
    ViewData["Title"] = "Détails de l'annonce";
}

<a asp-action="Index" class="btn btn-light mb-3">← Retour</a>

<div class="container my-4">
    <div class="row g-4 align-items-center justify-content-center">
        <!-- Colonne image -->
        <div class="col-12 col-md-6 col-lg-5 text-center">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="@Model.Photo" alt="@Model.Titre"
                     class="img-fluid rounded shadow-sm" style="max-height:400px; object-fit:cover;" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-sm"
                     style="height:400px;">
                    <span class="text-muted">Aucune image</span>
                </div>
            }
        </div>

        <!-- Colonne texte -->
        <div class="col-12 col-md-6 col-lg-5">
            <h1 class="h3">@Model.Titre</h1>
            <p class="text-muted mb-2">@Model.Description</p>
            <p class="mb-1"><strong>Statut :</strong> @Model.Statut</p>
            <p class="mb-1"><strong>Marque :</strong> @Model.Vehicule?.Marque</p>
            <p class="mb-1"><strong>Modèle :</strong> @Model.Vehicule?.Modele</p>
            <p class="mb-1"><strong>Année :</strong> @Model.Vehicule?.Annee</p>
            <p class="mb-1"><strong>Prix :</strong> @Model.Prix €</p>
        </div>
    </div>
</div>
