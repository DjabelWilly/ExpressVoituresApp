@model ExpressVoituresApp.Models.Entities.Annonce

@{
    ViewData["Title"] = "Détails de l'annonce";
}

<a asp-action="Index" class="btn btn-light mb-3"> ← Retour</a>

<div class="container-fluid d-flex justify-content-center align-items-center mt-4">
    <div class="p-3">
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Model.Photo" alt="@Model.Titre" style="max-width:400px;" />
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center" style="height:400px;width:400px;">
                <span class="text-muted">Aucune image</span>
            </div>
        }
    </div>
    <div class="p-3">
        <h1>@Model.Titre</h1>
        <p>@Model.Description</p>
        <p>@Model.Statut</p>
        <p>@Model.Vehicule?.Marque @Model.Vehicule?.Modele</p>
        <p>@Model.Vehicule?.Annee</p>
        <p>@Model.Prix €</p>
    </div>
   </div>