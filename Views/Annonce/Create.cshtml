@model ExpressVoituresApp.Models.AnnonceViewModel

@{
    ViewData["Title"] = "Publier une annonce";
}

<h1>Publier une annonce</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group mb-2">
        <label asp-for="VehiculeId">Choisir un véhicule</label>
        <select asp-for="VehiculeId" class="form-control" asp-items="ViewBag.Vehicules" id="VehiculeId">
            <option value="">-- Sélectionner un véhicule --</option>
        </select>
        <span asp-validation-for="VehiculeId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Titre"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ImageFile" class="form-label">Photo</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Prix"></label>
        <span class="fst-italic text-muted"> (prix d'achat + réparations + 500)</span>
        <input asp-for="Prix" class="form-control" readonly id="Prix" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Publier</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Annuler</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
document.addEventListener("DOMContentLoaded", function() {
    const selectVehicule = document.getElementById("VehiculeId");
    const inputPrix = document.getElementById("Prix");

    selectVehicule.addEventListener("change", async function() {
        const vehiculeId = this.value;
        if (!vehiculeId) {
            inputPrix.value = "";
            return;
        }

        const response = await fetch(`/Annonce/GetPrixCalcule?vehiculeId=${vehiculeId}`);
        if (response.ok) {
            const prix = await response.json();
            inputPrix.value = prix;
        } else {
            inputPrix.value = "";
        }
    });
});
</script>



